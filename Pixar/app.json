{
  "expo": {
    "name": "Faith Frames",
    "slug": "faith-frames",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "faithframes",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.faithframes.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Faith Frames needs access to your camera for profile and content uploads.",
        "NSPhotoLibraryUsageDescription": "Faith Frames needs access to your photos to let you upload content."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.faithframes.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Faith Frames to access your photos to share your moments."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "e73f7032-e16a-4bdd-8b9b-b2c9689cd3e2"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "owner": "faithframes"
  }
}
